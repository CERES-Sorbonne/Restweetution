{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "es2018"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
